<!-- school, dropdown -->

<%= @new_parent.firstname if @new_parent %>

<%= @new_student.firstname if @new_student %>

<%= link_to "New parent", new_parent_path, data: { toggle: "modal", target: "#modal" , remote: new_parent_path} , class: 'btn btn-primary'%>

<%= link_to "New student", new_student_path, data: { toggle: "modal", target: "#modal" , remote: new_student_path} , class: 'btn btn-primary'%>


<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Amount: $20.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="500"></script>
<% end %>