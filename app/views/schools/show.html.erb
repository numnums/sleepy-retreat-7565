 <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel"><%= @school.name %></h4>          
        </div>
        <div class="modal-body">
			<p id="school_description">
			  <strong>Description:</strong>
			  <br/>
			  <%= @school.description %>
			</p>

			<p id="school_address">
			  <strong>Address:</strong>
			  <br/>
			  <%= @school.address %> <%= @school.address2 %>		<br/>
			  <%= @school.city %>, <%= @school.state %> <%= @school.zip %>			  
			</p>
			
			<p id="school_contact">
			  <strong>Point of Contact:</strong>
			  <br/>
			  <%= @school.POC %> <br/>
			  <%= @school.title %> <br/> 
			  <%= @school.email %> <br/>
			  <%= @school.phone %> <br/> 
			</p>

		</div> <!-- modal-body -->
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			<%= link_to 'Edit School', edit_school_path(@school), class: 'btn btn-primary' , id: "edit_school" %>
			<%= link_to 'Delete', school_path(@school), class: 'btn btn-danger',
			                    method: :delete, data: { confirm: 'Are you sure?' } , id: "delete_school" %>
		</div> <!-- modal-footer -->
    </div>
</div>    