 <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel"><%= @parent.firstname + " " +@parent.lastname%></h4>      
      	</div>
        <div class="modal-body">
			<p id="firstname">
			  	<strong>First Name:</strong>
			  	<br/>
			  	<%= @parent.firstname %>
			</p>
			<p id="lastname">
			  	<strong>Last Name:</strong>
			  	<br/>
			  	<%= @parent.lastname %>
			</p>
			<p id="email">
				<strong>Email Address:</strong>
			  	<br/>
			  <%= @parent.email %>
			</p>
			<p>
				<strong>Accepts Marketing:</strong>
				<%= @parent.acceptsmarketing  %>
			</p>
		</div> <!-- modal-body -->
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			<%= link_to 'Edit Parent', edit_parent_path(@parent), class: 'btn btn-primary' , id: "edit_parent" %>
			<%= link_to 'Delete', parent_path(@parent), class: 'btn btn-danger',
			                    method: :delete, data: { confirm: 'Are you sure?' } , id: "delete_parent" %>
		</div> <!-- modal-footer -->
    </div>
</div>    