<h1>New Student</h1>

<%= form_for :student, url: students_path do |f| %>
  <p class = "form-group">
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname , :class => 'form-control'   %>
  </p>
 
  <p class = "form-group">
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname , :class => 'form-control'  %>
  </p>
 
   <p class = "form-group">
    <%= f.label :gender %><br>
    <%= f.text_field :gender , :class => 'form-control'   %>
  </p>
  <p class ="form-group">
    <%= link_to 'Cancel', students_path, class: 'btn btn-default' %>
    <%= f.submit :class => 'btn btn-primary' %>
  </p>
<% end %>