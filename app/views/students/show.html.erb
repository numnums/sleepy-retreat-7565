<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel"><%= @student.firstname + " " + @student.lastname %></h4>          
        </div>
        <div class="modal-body">
          <p>
            <strong>First Name:</strong>
            <br/>
            <%= @student.firstname %>
          </p>
           
          <p>
            <strong>Last Name:</strong>
            <br/>
            <%= @student.lastname %>
          </p>

          <p>
            <strong>Gender:</strong>
            <br/>
            <%= @student.gender %>
          </p>
          <p>
            <strong>School:</strong>
            <br/>
            <%= @student.school.name if @student.school %>
          </p>
          <p>
            <strong>Parent:</strong>
            <br/>
            <%= @student.parent.firstname if @student.parent %>
          </p>
        </div> <!-- modal-body -->
        <div class="modal-footer">
          <%= link_to 'Back to students', students_path, class: 'btn btn-default' %>

          <%= link_to 'Edit student', edit_student_path(@student), class: 'btn btn-primary' %>

          <%= link_to 'Delete', student_path(@student), class: 'btn btn-danger',
                              method: :delete, data: { confirm: 'Are you sure?' } %>
        </div> <!-- modal-footer -->
  </div> <!-- modal-content -->        
</div>