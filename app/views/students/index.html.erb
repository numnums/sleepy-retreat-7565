<h1>Listing Students</h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @students.each do |student| %>
  <tr>
    <td><%= link_to student.firstname, student_path(student) %></td>
    <td><%= student.lastname %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New student', new_student_path, class: 'btn btn-primary' %>